def get_color_choice():
    b = input("Пожалуйста, введите цвет: ")
    while b not in a:
        print(b, "не является верным значением. Пожалуйста, введите другой: ", end = "")
        b = input()
    c.append(b)
    b = input("Пожалуйста, введите цвет: ")
    while b not in a:
        print(b, "не является верным значением. Пожалуйста, введите другой: ", end = "")
        b = input()
    c.append(b)
    return str(c[0]), str(c[1])

def get_num_hexagons():

    v = int(input("Пожалуйста, введите количество шестиугольников, располагаемых в ряд: "))
    while int(v) < 4 or int(v) > 20:
        v = int(input("Оно должно быть от 4  до 20. Пожалуйста, повторите попытку: "))
    return v

a = ["синий", "зелёный", "жёлтый", "красный", "фиолетовый", "розовый", "оранжевый"]
c = []    #список двух выбранных цветов
print("""Допустимые цвета заливки:
синий
зелёный
жёлтый
красный
фиолетовый
розовый
оранжевый""")

print(get_color_choice())


print(get_num_hexagons())
